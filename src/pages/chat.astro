---
import BaseLayout from '../layouts/BaseLayout.astro';
import Chat from '../components/Chat.tsx';
import Section from '../components/Section.astro';
import SectionIndex from '../components/SectionIndex.astro';
import { getFeatureFlag } from '../lib/launchdarkly';

export const prerender = false;

const isChatEnabled = await getFeatureFlag('ai-chat', false);

if (!isChatEnabled) {
  return Astro.redirect('/', 307);
}
---

<BaseLayout title="Chat with Virtual Ray">
  <SectionIndex />
  <main class="h-dvh sm:h-auto flex flex-col">
    <!-- Mobile header - compact -->
    <header class="sm:hidden flex items-center justify-between px-4 py-3 border-b border-border shrink-0">
      <a href="/" class="inline-flex items-center gap-1.5 text-muted hover:text-foreground transition-colors">
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        <span class="text-sm">Back</span>
      </a>
      <h1 class="text-sm font-medium">Artificial Ray</h1>
      <div class="flex items-center gap-2">
        <a href="https://github.com/raycashmore/ray-cashmore-me" target="_blank" rel="noopener noreferrer" class="w-8 h-8 flex items-center justify-center text-muted hover:text-foreground transition-colors">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
        <button
          id="mobile-theme-toggle"
          class="w-8 h-8 flex items-center justify-center text-muted hover:text-foreground transition-colors"
          aria-label="Toggle dark mode"
        >
          <!-- Sun icon (shown in dark mode) -->
          <svg class="hidden dark:block w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <circle cx="12" cy="12" r="4" />
            <path d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M6.34 17.66l-1.41 1.41M19.07 4.93l-1.41 1.41" />
          </svg>
          <!-- Moon icon (shown in light mode) -->
          <svg class="block dark:hidden w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />
          </svg>
        </button>
      </div>
    </header>

    <script>
      // Mobile theme toggle functionality
      const mobileToggle = document.getElementById('mobile-theme-toggle');
      mobileToggle?.addEventListener('click', () => {
        const html = document.documentElement;
        html.classList.toggle('dark');
        localStorage.setItem('theme', html.classList.contains('dark') ? 'dark' : 'light');
      });
    </script>

    <!-- Desktop back link -->
    <a href="/" class="hidden sm:inline-flex fixed left-6 top-4 z-40 items-center gap-2 text-muted hover:text-foreground transition-colors">
      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Back
    </a>

    <!-- Mobile chat area - full remaining height -->
    <div class="flex-1 flex flex-col min-h-0 px-4 py-3 sm:hidden">
      <Chat client:load />
    </div>

    <!-- Desktop layout - unchanged -->
    <Section id="chat" number="01" class="hidden sm:block min-h-screen">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-6 mb-12">
        <h1 class="type-section-title">Artificial Ray</h1>
        <div class="text-sm max-w-xs">
          <p class="text-muted">
            RAG-Powered AI Chat using TanStack AI
          </p>
          <a href="https://github.com/raycashmore/ray-cashmore-me" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 text-muted hover:text-foreground transition-colors mt-2">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View Source
          </a>
        </div>
      </div>
      <Chat client:load />
    </Section>
  </main>
</BaseLayout>
