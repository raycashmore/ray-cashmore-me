---
import BaseLayout from './BaseLayout.astro';
import Container from '../components/Container.astro';

interface Props {
  title: string;
  date: Date;
}

const { title, date } = Astro.props;
const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={`${title} — Ray Cashmore`}>
  <main class="pt-32 pb-24">
    <Container>
      <article>
        <header class="mb-12">
          <time class="text-xs text-muted uppercase tracking-wider">{formattedDate}</time>
          <h1 class="mt-3 text-3xl md:text-4xl lg:text-5xl font-semibold tracking-tight">
            {title}
          </h1>
        </header>

        <div class="prose">
          <slot />
        </div>
      </article>

      <div class="mt-16 pt-8 border-t border-border">
        <a href="/thoughts" class="text-sm hover:opacity-60">
          ← Back to thoughts
        </a>
      </div>
    </Container>
  </main>
</BaseLayout>
