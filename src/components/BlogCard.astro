---
interface Props {
  title: string;
  date: Date;
  slug: string;
  excerpt?: string;
}

const { title, date, slug, excerpt } = Astro.props;
const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="group py-8 border-b border-border last:border-b-0">
  <a href={`/thoughts/${slug}`} class="block">
    <time class="text-xs text-muted uppercase tracking-wider">{formattedDate}</time>
    <h2 class="mt-2 text-xl md:text-2xl font-medium group-hover:opacity-60">
      {title}
    </h2>
    {excerpt && (
      <p class="mt-3 text-muted leading-relaxed">{excerpt}</p>
    )}
  </a>
</article>
